<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hospital Dashboard - MediQR</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-grad-start: #8e2de2;
            --primary-grad-end: #4a00e0;
            --secondary-grad-start: #ffc837;
            --secondary-grad-end: #ff8008;
            --text-dark: #333;
            --text-light: #888;
            --bg-white: #fff;
            --bg-light-gray: #f5f5f5;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #f0f2f5;
        }

        #particles-js {
            position: fixed;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: -1;
        }

        .dashboard-container {
            width: 100%;
            max-width: 800px;
            padding: 40px;
            background-color: var(--bg-white);
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            border-radius: 20px;
            text-align: center;
        }
        
        .dashboard-header h1 {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 10px;
        }

        .dashboard-header p {
            font-size: 1rem;
            color: var(--text-light);
            margin-bottom: 40px;
        }

        /* Styling for the primary navigation link/button */
        .action-link { /* Class name changed for clarity */
            display: flex; /* Added flex to center icon and text */
            align-items: center;
            justify-content: center;
            width: 100%;
            padding: 15px;
            margin-bottom: 20px;
            border: none;
            border-radius: 50px;
            background: linear-gradient(135deg, var(--primary-grad-start), var(--primary-grad-end));
            color: var(--bg-white);
            font-size: 1.1rem;
            font-weight: 600;
            text-transform: uppercase;
            text-decoration: none; /* Crucial for links */
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(74, 0, 224, 0.3);
        }

        .action-link:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(74, 0, 224, 0.4);
        }

        .action-link i {
            margin-right: 10px;
        }

        .field-divider {
            border: none;
            height: 1px;
            background-color: #e0e0e0;
            width: 100%;
            margin: 20px 0 30px;
        }
        
        .biometric-section h2 {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 20px;
        }

        .biometric-options {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .biometric-button {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 150px;
            height: 150px;
            border: 2px solid #e0e0e0;
            border-radius: 20px;
            background-color: var(--bg-light-gray);
            color: var(--text-dark);
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none; /* Ensure link styling doesn't interfere */
        }

        .biometric-button i {
            font-size: 3rem;
            margin-bottom: 15px;
            color: var(--primary-grad-end);
            transition: all 0.3s ease;
        }

        .biometric-button:hover {
            border-color: var(--primary-grad-end);
            background-color: #fff;
            box-shadow: 0 5px 20px rgba(74, 0, 224, 0.1);
            transform: translateY(-5px);
        }
        
        .biometric-button:hover i {
            transform: scale(1.1);
        }

        @media (max-width: 768px) {
            .dashboard-container {
                width: 95%;
                padding: 30px;
            }
            .biometric-options {
                flex-direction: column;
                align-items: center;
            }
            .biometric-button {
                width: 100%;
                max-width: 200px;
            }
        }

    </style>
</head>
<body>

    <div id="particles-js"></div>

    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1>Hospital Dashboard</h1>
            <p>Welcome, [Hospital Name]. Manage patient records efficiently and securely.</p>
        </div>

        <a href="register" class="action-link">
            <i class="fas fa-user-plus"></i> Create a New Patient Profile
        </a>

        <div class="field-divider"></div>

        <div class="biometric-section">
            <h2>View Patient Record</h2>
            <div class="biometric-options">
                <div class="biometric-button" id="fingerprint-btn">
                    <i class="fas fa-fingerprint"></i>
                    <span>Fingerprint Scan</span>
                </div>
                <div class="biometric-button" id="iris-btn">
                    <i class="fas fa-eye"></i>
                    <span>Iris Scan</span>
                </div>
                <a href="scan_record.html" style="text-decoration: none;">
                    <div class="biometric-button" id="qr-btn">
                        <i class="fas fa-qrcode"></i>
                        <span>QR Code Scan</span>
                    </div>
                </a>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        // --- Particles.js Background Logic ---
        particlesJS("particles-js", {
            "particles": { "number": { "value": 80, "density": { "enable": true, "value_area": 800 } }, "color": { "value": "#4a00e0" }, "shape": { "type": "circle" }, "opacity": { "value": 0.5, "random": true }, "size": { "value": 3, "random": true }, "line_linked": { "enable": true, "distance": 150, "color": "#8e2de2", "opacity": 0.4, "width": 1 }, "move": { "enable": true, "speed": 2, "direction": "none", "random": false, "straight": false, "out_mode": "out", "bounce": false } }, "interactivity": { "detect_on": "canvas", "events": { "onhover": { "enable": true, "mode": "grab" }, "onclick": { "enable": true, "mode": "push" }, "resize": true }, "modes": { "grab": { "distance": 140, "line_linked": { "opacity": 1 } }, "push": { "particles_nb": 4 } } }, "retina_detect": true });
    
        // You can add JavaScript functionality to the buttons here
        const fingerprintBtn = document.getElementById('fingerprint-btn');
        const irisBtn = document.getElementById('iris-btn');

        fingerprintBtn.addEventListener('click', () => {
            alert('Fingerprint scan initiated... (Add API call here)');
            console.log('Fingerprint scan initiated...');
        });

        irisBtn.addEventListener('click', () => {
            alert('Iris scan initiated... (Add API call here)');
            console.log('Iris scan initiated...');
        });
    </script>

</body>
</html>